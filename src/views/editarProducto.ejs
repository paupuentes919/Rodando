    <body>
        <div class="vh-100 d-flex align-items-center products-form__container">
            <main class="container">
                <h1 class="text-center mb-4">Editar Producto</h1>
                <form action="/productos/editar/<%= rodado.id %>?_method=PUT" method="POST" class="form" enctype="multipart/form-data">
                    <div class="row mt-4">
                        <div class="col-md">
                            <label class="form-label fw-semibold" for="title">Titulo</label>
                            <input
                                class="form-control"
                                type="text"
                                id="title"
                                name="title"
                                value="<%= rodado.titulo %>"
                            />
                        </div>
                        <div class="col-md">
                            <label for="vehiculo" class="form-label fw-semibold">Vehiculo</label>
                            <select name="vehiculo" id="vehiculo" class="form-control">
                                <% if(rodado.categoria.nombre == "bicicleta") { %>
                                <option value="bicicleta" selected>bicicleta</option>
                                <option value="monopatin">monopatin</option>
                                <% } else  { %>
                                <option value="bicicleta">bicicleta</option>
                                <option value="monopatin" selected>monopatin</option>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md">
                            <label class="form-label fw-semibold" for="rodado">Rodado</label>
                            <input
                                class="form-control"
                                type="text"
                                id="rodado"
                                name="rodado"
                                value="<%= prod.rodado %>"
                            />
                        </div>
                        <div class="col-md">
                            <label class="form-label fw-semibold" for="price">Costo por hora</label>
                            <input
                                class="form-control"
                                type="number"
                                id="price"
                                name="price"
                                value="<%= rodado.precio %>"
                            />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md">
                            <label for="color" class="form-label fw-semibold">Color</label>
                            <select name="color" id="color" class="form-control" >
                                <% for(let i=0; i< color.length; i++) { %>
                                    <option value="<% color[i].id %>"><%= color[i].nombre %></option>
                                    <% } %>
                            </select>
