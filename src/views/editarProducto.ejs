                        <div class="col-md">
                            <label class="form-label fw-semibold" for="img">Imagen</label>
                            <input
                                class="form-control"
                                type="file"
                                id="img"
                                name="img"
                            />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            <label class="form-label fw-semibold" for="desc">Descripcion</label>
                            <textarea
                                class="form-control"
                                id="description"
                                name="description"
                                rows="6"
                            ><%= rodado.descripcion %></textarea>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center gap-4">
                        <button  class="btn send-btn mt-4 px-5 py-3">
                            <h5>Actualizar</h5>
                        </button>
                    </form>
